{
  "name": "pagecaster",
  "version": "1.0.0",
  "description": "Stream web pages to RTMP with optional audio sources",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "docker:build": "docker build -t pagecaster:local .",
    "docker:build:version": "docker build -t pagecaster:local -t pagecaster:$(node -p \"require('./package.json').version\") .",
    "docker:tag:latest": "docker tag pagecaster:local pagecaster:latest",
    "docker:run": "docker run --rm --shm-size=256m -e WEB_URL=https://example.com -e RTMP_URL=rtmp://localhost:1935/live -e AUDIO_SOURCE=silent pagecaster:local"
  },
  "dependencies": {
    "puppeteer": "^23.0.0",
    "puppeteer-stream": "^3.0.20"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}